{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://dtl.local/schemas/commit_bundle.json",
    "title": "CommitBundle",
    "description": "Bundle of proposed commits from Reporter for CommitGate validation",
    "type": "object",
    "required": [
        "run_id",
        "agent_id",
        "schema_version",
        "timestamp",
        "content_hash",
        "payload"
    ],
    "properties": {
        "run_id": {
            "type": "string",
            "pattern": "^(RUN-[0-9]{8}_[0-9]{6}|TEST-[0-9]+)$"
        },
        "agent_id": {
            "type": "string",
            "pattern": "^[a-z]+-v[0-9]+\\.[0-9]+$"
        },
        "schema_version": {
            "type": "string",
            "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "content_hash": {
            "type": "string",
            "pattern": "^sha256:[a-f0-9]{16,64}$"
        },
        "payload": {
            "type": "object"
        },
        "evidence_refs": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "^EV-[A-Z0-9]{12}$"
            },
            "default": []
        },
        "capability_claims": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "default": []
        }
    },
    "additionalProperties": false
}