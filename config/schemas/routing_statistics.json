{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://dtl.local/schemas/routing_statistics.json",
    "title": "RoutingStatistics",
    "description": "Numeric-only routing statistics - NO text, beliefs, or causal claims allowed",
    "type": "object",
    "required": [
        "strategy_id"
    ],
    "properties": {
        "strategy_id": {
            "type": "string",
            "pattern": "^STRAT-[A-Z0-9]{8}$"
        },
        "invocation_count": {
            "type": "integer",
            "minimum": 0
        },
        "last_invoked_at": {
            "type": "string",
            "format": "date-time"
        },
        "outcome_ema_weight": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Exponential moving average weight - frozen if DISABLE_LEARNING active"
        },
        "avg_latency_ms": {
            "type": "integer",
            "minimum": 0
        },
        "success_rate_30d": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
        },
        "last_updated_at": {
            "type": "string",
            "format": "date-time"
        }
    },
    "additionalProperties": false
}