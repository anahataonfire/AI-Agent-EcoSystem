{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://dtl.local/schemas/evidence_candidate.json",
    "title": "EvidenceCandidate",
    "description": "Evidence candidate from Researcher to Reporter",
    "type": "object",
    "required": [
        "evidence_id",
        "source_url",
        "source_trust_tier",
        "fetched_at"
    ],
    "properties": {
        "evidence_id": {
            "type": "string",
            "pattern": "^EV-[A-Z0-9]{12}$",
            "description": "Unique evidence identifier"
        },
        "source_url": {
            "type": "string",
            "format": "uri",
            "maxLength": 500,
            "description": "Source URL for the evidence"
        },
        "source_trust_tier": {
            "type": "integer",
            "minimum": 1,
            "maximum": 4,
            "description": "Trust tier (1=highest, 4=lowest)"
        },
        "fetched_at": {
            "type": "string",
            "format": "date-time",
            "description": "When the evidence was fetched"
        },
        "summary": {
            "type": "string",
            "maxLength": 500,
            "description": "Brief summary of the evidence (typed text with constraints)"
        },
        "raw_content_hash": {
            "type": "string",
            "pattern": "^sha256:[a-f0-9]{64}$",
            "description": "Hash of raw content for integrity"
        },
        "relevance_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Relevance score assigned by Researcher"
        },
        "asset_tags": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "XAU",
                    "XAG",
                    "GME",
                    "BTC",
                    "SPY",
                    "QQQ"
                ]
            },
            "description": "Assets this evidence relates to"
        }
    },
    "additionalProperties": false
}