<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.dtl.realitycheck-eod</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/Users/adamc/Documents/001 AI Agents/AI Agent EcoSystem 2.0/.venv/bin/python</string>
        <string>-m</string>
        <string>src.cli</string>
        <string>run</string>
        <string>--mode=live</string>
        <string>--job=realitycheck_eod</string>
    </array>
    
    <key>WorkingDirectory</key>
    <string>/Users/adamc/Documents/001 AI Agents/AI Agent EcoSystem 2.0</string>
    
    <!-- P1-4: Run on load if job was missed -->
    <key>RunAtLoad</key>
    <true/>
    
