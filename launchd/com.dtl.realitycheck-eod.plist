    <!-- P1-5: Log paths -->
    <key>StandardOutPath</key>
    <string>/Users/adamc/Documents/001 AI Agents/AI Agent EcoSystem 2.0/logs/realitycheck_eod.log</string>
    
    <key>StandardErrorPath</key>
    <string>/Users/adamc/Documents/001 AI Agents/AI Agent EcoSystem 2.0/logs/realitycheck_eod_error.log</string>
    
    <!-- P1-6: Environment with TZ and PYTHONPATH -->
    <key>EnvironmentVariables</key>
    <dict>
        <key>PYTHONPATH</key>
        <string>/Users/adamc/Documents/001 AI Agents/AI Agent EcoSystem 2.0</string>
        <key>DTL_MODE</key>
        <string>live</string>
        <key>TZ</key>
        <string>Pacific/Honolulu</string>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/Users/adamc/.local/bin</string>
    </dict>
    
    <!-- Restart if job dies unexpectedly -->
    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
    </dict>
</dict>
</plist>
